<div class="recipeBox col-md-4">
	<div class="image-wrapper">
		<%= link_to recipe do %>
		<% if recipe.image?  %>
		<%= image_tag(recipe.image.url(:thumb), class: 'img-responsive img-rounded') %>
		<% else %>
		<%= image_tag(recipe.image.url, class: 'img-responsive img-rounded', width: '200') %>
		<% end %>
		<% end %>
	</div>
	<div class="recipeInfo">
		<h3> <%= link_to recipe.title, recipe %>
		<small> <%= recipe.username  %></small>
		</h3>
		
	</div>
</div>